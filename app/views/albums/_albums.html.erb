<div class="container mt-4">
  <div class="row mt-3">
	  <% albums.each do |album| %>
	    <div class="col-md" id="album_id" name="album_id" value="<%= album['id']%>">
	      <a href="/users/<%= user['id']%>"><image src="<%= photos_for_album(album['id']) %>"><p><%= album['title'] %></p></image></a>
      </div>
    <% end %>
   </div>

<div id="pagination">
  <div class="nav">
  	<ul>
      <%= will_paginate(albums, params: { controller: :albums,
                                        action: :show },
                                 param_name: "albums[page]",
                                 previous_label: 'Previous',
                                 next_label: 'Next') %>
    </ul>
  </div>
</div>
</div>

