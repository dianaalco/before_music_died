
<div class="container mt-4">
  <div class="row mt-3">
	  <% @albums.each do |album| %>
	    <div class="col-md" id="album_id" name="album_id" value="<%= album['id']%>">
	    <a href="/users/<%=album['userId']%>"><image src="<%= photos_for_album(album['id']) %>"><p><%= album['title'] %></p></image></a>
	    <p>User: <%= user_owner(album['userId']) %></p>
	  </div>
   <% end %>
</div>

<div id="pagination">
  <div class="nav">
  	<ul>
    <%= will_paginate(@albums, params: { controller: :albums,
                                        action: :index },
                               param_name: "albums[page]",
                               previous_label: 'Previous',
                               next_label: 'Next') %>
    </ul>
  </div>
</div>
</div>

